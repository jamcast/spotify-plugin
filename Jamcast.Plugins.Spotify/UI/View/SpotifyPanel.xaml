<src:ConfigurationPanel x:Class="Jamcast.Plugins.Spotify.UI.View.SpotifyPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:src="clr-namespace:Jamcast.Extensibility.UI;assembly=Jamcast.Extensibility"
             xmlns:local="clr-namespace:Jamcast.Plugins.Spotify.UI.View"
             xmlns:model="clr-namespace:Jamcast.Plugins.Spotify.UI.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">
    <ContentPresenter Content="{Binding CurrentView}">
        <ContentPresenter.Resources>
            <DataTemplate DataType="{x:Type model:LoggedInViewModel}">
                <local:LoggedInView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type model:LoggedOutViewModel}">
                <local:LoggedOutView />
            </DataTemplate>
        </ContentPresenter.Resources>
    </ContentPresenter>
</src:ConfigurationPanel>